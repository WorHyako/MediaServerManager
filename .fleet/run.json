{
    "configurations": [
        {
            "name": "Update compile database",
            "type": "command",
            "program": "cmake",
            "workingDir": "build",
            "args": [
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-S $PROJECT_DIR$/src"
            ]
        },
        {
            "name": "Update cmake project",
            "type": "command",
            "program": "",
            "dependsOn": [
                "Update cmake project in Debug mode",
                "Update cmake project in Release mode"
            ]
        },
        {
            "name": "Update cmake project in Release mode",
            "type": "command",
            "program": "cmake",
            "workingDir": ".",
            "args": [
                "-S src",
                "-B build/Release",
                "-D CMAKE_BUILD_TYPE=Release"
            ]
        },
        {
            "name": "Update cmake project in Debug mode",
            "type": "command",
            "program": "cmake",
            "workingDir": ".",
            "args": [
                "-S src",
                "-B build/Debug",
                "-D CMAKE_BUILD_TYPE=Debug"
            ]
        },
        {
            "name": "Build Debug",
            "type": "command",
            "program": "cmake",
            "workingDir": "build/Debug",
            "dependsOn": [
                "Update cmake project in Debug mode"
            ],
            "args": [
                "--build",
                "."
            ]
        },
        {
            "name": "Build Release",
            "type": "command",
            "program": "cmake",
            "workingDir": "build/Release/",
            "dependsOn": [
                "Update cmake project in Release mode"
            ],
            "args": [
                "--build",
                "."
            ]
        },
        {
            "name": "Build all types",
            "type": "command",
            "dependsOn": [
                "Build Debug",
                "Build Release"
            ],
            "program": ""
        },
        {
            "name": "Run application in Debug mode",
            "type": "command",
            "program": "open",
            "args": [
                "-a",
                "$PROJECT_DIR$/build/Debug/MediaServerManager"
            ],
            "dependsOn": [
                "Build Debug"
            ]
        },
        {
            "name": "Run application in Release mode",
            "type": "command",
            "program": "open",
            "args": [
                "-a",
                "$PROJECT_DIR$/build/Release/MediaServerManager"
            ],
            "dependsOn": [
                "Build Release"
            ]
        }
    ]
}
