{
    "configurations": [
        {
            "name": "Update cmake cache (Debug)",
            "type": "command",
            "program": "sh",
            "workingDir": ".",
            "args": [
                "updateCmakeCache.sh",
                "-g Ninja",
                "-t Debug"
            ]
        },
        {
            "name": "Update cmake cache (Release)",
            "type": "command",
            "program": "sh",
            "workingDir": ".",
            "args": [
                "updateCmakeCache.sh",
                "-g Ninja",
                "-t Release"
            ]
        },
        {
            "name": "Build (Debug)",
            "type": "command",
            "program": "sh",
            "workingDir": ".",
            "args": [
                "build.sh",
                "-t Debug"
            ],
            "dependsOn": [
                "Update cmake cache (Debug)"
            ],
        },
        {
            "name": "Build (Release)",
            "type": "command",
            "program": "sh",
            "workingDir": ".",
            "args": [
                "build.sh",
                "-t Release"
            ],
            "dependsOn": [
                "Update cmake cache (Release)"
            ],
        },
        {
            "name": "Run application (Debug)",
            "type": "command",
            "program": "open",
            "args": [
                "-a",
                "$PROJECT_DIR$/build/Debug/MediaServerManager"
            ],
            "dependsOn": [
                "Build (Debug)"
            ]
        },
        {
            "name": "Run application (Release)",
            "type": "command",
            "program": "open",
            "args": [
                "-a",
                "$PROJECT_DIR$/build/Release/MediaServerManager"
            ],
            "dependsOn": [
                "Build (Release)"
            ]
        }
    ]
}
